program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
  i,k,s,sum1,sum2 :integer;
  d :Set of 0..9;

begin
  d := [];
  writeln('» —+»— = —»');
  for I := 0 to 9 do
    begin
      include(d,i);
      for k := 0 to 9 do
       if not(k in d) then
        begin
          d := d + [k];
          for s := 0 to 9 do
            if not (s in d) then
              begin
                sum1 := 2 * i * 100 + (k + s) * 10 + k + s;
                sum2 := k * 100 + s * 10 + i;
                if sum1 = sum2 then
                  writeln (i, k, s, '+', i, s, k, '=', k, s, i);
              end;
          d := d - [k];
        end;
      d := d - [i];
    end;
  readln;
end.

