program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  Math,
  System.SysUtils;

var
  x,res : real;
  n : byte;

function func ( x: real; var n: byte) : real;
var
  a: real;
  begin
    if n >0 then
      begin
        dec(n);
        a := x*x;
        func(a,n);
      end;
    result := x/a;
  end;

begin
writeln('¬ведите X');
readln(X);
writeln('¬ведите степень n');
readln(n);
x := func(x,n);
writeln('F(x)=',x:3:10);
readln;
end.

