program Project1;

{$APPTYPE CONSOLE}
{$R *.res}

uses
  Math,
  System.SysUtils;
//x=1 n 21586
//x=1.5 n=1752
var
  x: extended;
  n, i: integer;
  flag: Boolean;

function positiveN(x: real; n, i: integer): extended;
begin
  if i < n - 1 then
    x := x * positiveN(x, n, i + 1);
  result := x;
end;

function negativeN(x: real; n, i: integer): extended;
begin
  if i < n then
    x := x * negativeN(x, n, i + 1);
  result := x;
end;

begin
  i := 1;
  flag := false;
  repeat
    write('¬ведите X: ');
    readln(x);
    write('¬ведите степень n: ');
    readln(n);
    if ((x=1) and (n>21586)) or ((x>1)and(n>1752))then
      begin
        writeln('ERR');
        flag := false;
      end
    else flag := true;  
      
      
  until flag;
  if n > 0 then
    x := x * positiveN(x, n, i)
  else if n < 0 then
  begin
    n := abs(n);
    x := 1 / negativeN(x, n, i);
  end
  else if n = 0 then
    x := 1;
  writeln('F(x)= ', x:2:3);
  readln;

end.
