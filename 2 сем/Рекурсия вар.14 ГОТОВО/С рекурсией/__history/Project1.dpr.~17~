program Project1;

{$APPTYPE CONSOLE}
{$R *.res}

uses
  Math,
  System.SysUtils;

var
  x: real;
  n,i: integer;

function positiveN(x: real; n, i: integer): real;
begin
  if i < n - 1 then
    x := x * positiveN(x, n, i + 1);
  result := x;
end;

function negativeN(x: real; n, i: integer): real;
begin
  if i < n then
    x := x * negativeN(x, n, i + 1);
  result := x;
end;

begin
  i := 1;
  write('¬ведите X: ');
  readln(x);
  write('¬ведите степень n: ');
  readln(n);
  if n > 0 then
    x := x * positiveN(x, n, i)
  else if n < 0 then
  begin
    n := abs(n);
    x := 1 / negativeN(x, n, i);
  end
  else
    x := 1;
  writeln('F(x)= ', x:2:3);
  readln;

end.
