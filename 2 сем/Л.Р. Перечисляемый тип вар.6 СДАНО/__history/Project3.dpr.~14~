program Project3;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

const
  FMth = [1,3,5,7,8,10,12];
  SMth = [4,6,9,11];

type
  years = 0..2013;
  months = (jan=1, feb, mar, apr, may, jun, jul, aug, sep, oct, nov, dec);
  days = 1..31;

var
  i:byte;
  year : years;
  month : months;
  day : days;
  leap,notLeap,bm,sm, flag : boolean;
  dd,mm,yy : integer;

begin
writeln('Введите год');
leap := false;
notLeap := false;
bm := false;
sm := false;
flag := false;
  repeat
    readln(year);
    if (year <= 0) or (year > 2013) then    //Проверка года
      writeln ('Некорректный ввод')
    else
    break
  until (false);

writeln('Введите месяц');
  
  repeat
    readln(i);
    case i of
    1: month:=jan;
    2: month:=feb;
    3: month:=mar;
    4: month:=apr;
    5: month:=may;
    6: month:=jun;
    7: month:=jul;
    8: month:=aug;
    9: month:=sep;
    10: month:=oct;
    11: month:=nov;
    12: month:=dec;
    end;
    if (ord(month) <= 0) or (ord(month) > 12) then    //Проверка Месяца
      writeln ('Некорректный ввод')
    else
    break
  until (false);

writeln('Введите день');
  
  repeat
    repeat                                  //Проверка корректности даты
     readln(day);
       if (day > 31) or (day <= 0) then
         writeln ('Некорректный ввод')
       else break;   
    until false;
    if (ord(month) in FMth) and (day <= 31) then bm := true  //Проверка с 31 днем
    else
    if not (ord(month) in FMth) and (day > 30) then          //Проверка с 30 днями
      writeln ('Некорректная дата')
    else sm := true;
    if ((year mod 4 = 0)and(year mod 100=0) and (year mod 400=0)) and (ord(month) = 2) and (day <= 29) then    //февраль в високосном
      leap := true;
    if not(year mod 4 = 0) and (ord(month) = 2) and (day <= 28) then
      notLeap := true;
    if bm or sm or leap or notLeap then
      begin
        flag := true;
        writeln('Корректный ввод');
      end;
  until (flag) ;
// 01.01.2013 - вторник, вывести субботы

dd := 29; mm := 12; yy := 2012; //первая суббота
writeln(dd,'.',mm,'.',yy);

  repeat
    dd := dd -7;
    if dd <=0 then
      begin
        dec(mm);
        if mm in FMth then dd :=  31 + dd
        else if mm in SMth then dd := 30 + dd
          else if yy mod 4 =0 then dd := 29 + dd
          else dd := 28 + dd + 1
      end;
    if mm <=0 then
      begin
        dec(yy);
        mm := 12;
        //dd := 31 + dd;
      end;
      writeln(dd,'.',mm,'.',yy);
  until ((yy<year));

readln;
end.
